@article {McCrory2010,
author = {McCrory, Eamon and De Brito, Stephane A. and Viding, Essi},
title = {Research Review: The neurobiology and genetics of maltreatment and adversity},
journal = {Journal of Child Psychology and Psychiatry},
volume = {51},
