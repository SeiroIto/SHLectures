@article {Fenichel2011,
	author = {Fenichel, Eli P. and Castillo-Chavez, Carlos and Ceddia, M. G. and Chowell, Gerardo and Parra, Paula A. Gonzalez and Hickling, Graham J. and Holloway, Garth and Horan, Richard and Morin, Benjamin and Perrings, Charles and Springborn, Michael and Velazquez, Leticia and Villalobos, Cristina},
