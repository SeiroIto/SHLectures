doi = "http://dx.doi.org/10.1016/j.neuroimage.2009.03.005",
url = "http://www.sciencedirect.com/science/article/pii/S1053811909002286",
author = "Akemi Tomoda and Hanako Suzuki and Keren Rabi and Yi-Shin Sheu and Ann Polcari and Martin H. Teicher",
keywords = "Corporal punishment (CP)",
keywords = "Harsh corporal punishment (HCP)",
