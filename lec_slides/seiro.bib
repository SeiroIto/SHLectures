@article{DeBellis1994,
author = {De Bellis, M. D.  and G. P. Chrousos and L. D. Dorn and L. Burke and K. Helmers and M. A. Kling and P. K. Trickett and F. W. Putnam},
title = {Hypothalamic-pituitary-adrenal axis dysregulation in sexually abused girls.},
journal = {The Journal of Clinical Endocrinology \& Metabolism},
