@article{Hlongwana2011,
   author = "Hlongwana, Khumbulani W. and Maharaj, Rajendra and Zitha, Alpheus and Mabuza, Aaron M.",
   title = "Knowledge and practices towards malaria amongst residents of Bushbuckridge, Mpumalanga, South Africa : original research",   journal= "African Journal of Primary Health Care and Family Medicine",
   year = "2011",
   volume = "3",
