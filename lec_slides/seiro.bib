note = "",
issn = "0890-8567",
doi = "http://dx.doi.org/10.1097/chi.0b013e31814a62f6",
url = "http://www.sciencedirect.com/science/article/pii/S0890856709620426",
author = "Kristin Bergman and Pampa Sarkar and Thomas G. O'Connor and Neena Modi and Vivette Glover",
keywords = "stress",
keywords = "prenatal",
