url = {http://dx.doi.org/10.1111/ecoj.12206},
doi = {10.1111/ecoj.12206},
pages = {1--39},
year = {2016},
abstract = {Conventional explanations for the post-1991 growth of India's manufacturing sector focus on goods trade liberalisation and industrial delicensing. We demonstrate the powerful contribution of a neglected factor: India's policy reforms in services. The link between these reforms and the productivity of manufacturing firms is examined using panel data for about 4,000 Indian firms for the period 1993-2005. We find that banking, telecommunications, insurance and transport reforms all had significant positive effects on the productivity of manufacturing firms. Services reforms benefited both foreign and locally owned manufacturing firms, but the effects on foreign firms tended to be stronger.},
}
